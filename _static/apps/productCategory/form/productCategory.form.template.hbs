<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Product Form</h4>
</div>

<div class="modal-body">
    <fieldset id="productCategory_basic_info">
        <div class="row">
            <div class="col-md-2 col-xs-12 form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <div id="productCategory-photo" class="image-editor center-block">
                            <div class="cropit-preview"></div>
                            <input type="range" class="cropit-image-zoom-input" />
                            <input id="productCategory-photo-file" type="file" class="cropit-image-input" />
                            <button id="select-image-btn" class="btn btn-primary btn-block btn-xs">Change Product Photo</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 col-xs-12">
                <form id="productCategory-form" name="productCategory-form" class="form-horizontal">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-md-2 col-xs-4 control-label">{{{uidInput.label}}}</label>
                            <div class="col-md-4 col-xs-8">
                                <input type="disabled" class="form-control" disabled value="{{{uidInput.value}}}" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">{{{skuInput.formGroup}}}</div>
                    <div class="col-md-6">{{{titleInput.formGroup}}}</div>
                    <div class="col-md-6">{{{buyPriceInput.formGroupNumber}}}</div>
                    <div class="col-md-6">{{{sellPriceInput.formGroupNumber}}}</div>
                    <div class="col-md-6">{{{stockInput.formGroupNumber}}}</div>
                    <div class="col-md-6">{{{categoryInput.formGroupDropDown}}}</div>
                </form>
            </div>
        </div>
    </fieldset>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" form="productCategory-form" class="btn btn-primary">Save changes</button>
</div>
