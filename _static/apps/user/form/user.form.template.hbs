<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">User Form</h4>
</div>

<div class="modal-body">
    <form id="user-form" name="user-form" class="form-horizontal">
        <span class="small">{{lang.fields_required_message}}</span>
        <ul id="error_message_box" class="warning"></ul>
        <fieldset id="user_basic_info">
            <div class="row">
                <div class="col-sm-6">{{{accountNumberInput.render}}}</div>
                <div class="col-sm-6">{{{emailInput.render}}}</div>
                <div class="col-sm-6">{{{firstNameInput.render}}}</div>
                <div class="col-sm-6">{{{lastNameInput.render}}}</div>
                <div class="col-sm-6">{{{phoneNumberInput.render}}}</div>
                <div class="col-sm-6">{{{address1Input.render}}}</div>
                <div class="col-sm-6">{{{address2Input.render}}}</div>
                <div class="col-sm-6">{{{countryInput.render}}}</div>
                <div class="col-sm-6">{{{cityInput.render}}}</div>
                <div class="col-sm-6">{{{stateInput.render}}}</div>
                <div class="col-sm-6">{{{zipInput.render}}}</div>
                <div class="col-sm-6">{{{notesInput.render}}}</div>
            </div>
        </fieldset>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" form="user-form" class="btn btn-primary">Save changes</button>
</div>
