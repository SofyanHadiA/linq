<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">User Form</h4>
</div>

<div class="modal-body">
    <form id="user-form" name="user-form" class="form-horizontal">
        <ul id="error_message_box" class="warning"></ul>
        <fieldset id="user_basic_info">
            <div class="row">
                <div class="col-md-12">
                    <legend>Basic Info</legend>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="col-md-2 col-xs-4 control-label">{{{accountNumberInput.label}}}</label>
                        <div class="col-md-4 col-xs-8">
                            <input type="disabled" class="form-control" disabled value="{{{accountNumberInput.value}}}" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">{{{userNameInput.formGroup}}}</div>
                <div class="col-md-6">{{{emailInput.formGroup}}}</div>
                <div class="col-md-6">{{{firstNameInput.formGroup}}}</div>
                <div class="col-md-6">{{{lastNameInput.formGroup}}}</div>
                <div class="col-md-6">{{{phoneNumberInput.formGroup}}}</div>
                <div class="col-md-6">{{{addressInput.formGroupTextArea}}}</div>
                <div class="col-md-6">{{{countryInput.formGroup}}}</div>
                <div class="col-md-6">{{{cityInput.formGroup}}}</div>
                <div class="col-md-6">{{{stateInput.formGroup}}}</div>
                <div class="col-md-6">{{{zipInput.formGroup}}}</div>
                <div class="col-md-6">{{{notesInput.formGroup}}}</div>
            </div>
        </fieldset>
        <div class="row">
            <div class="col-md-6">
                <fieldset>
                    <div class="row">
                        <div class="col-md-12">
                            <legend>Change Password</legend>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group class=" col-md-6 "">
                                <label for="passwordOld" class="col-xs-4 control-label ">Old Password</label>
                                <div class="col-xs-8">
                                    <input type="password" name="passwordOld" id="passwordOld" class="form-control valid" value="" aria-invalid="false">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group class=" col-md-6 "">
                                <label for="password" class="col-xs-4 control-label ">Password</label>
                                <div class="col-xs-8">
                                    <input type="password" name="password" id="password" class="form-control valid" value="" aria-invalid="false">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="password2" class="col-xs-4 control-label ">Confirm Password</label>
                                <div class="col-xs-8">
                                    <input type="password" name="password2" id="password2" class="form-control valid" value="" aria-invalid="false">
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

            </div>
            <div class="col-md-6">
                <fieldset>
                    <div class="row">
                        <div class="col-md-12">
                            <legend>Danger Area</legend>
                        </div>
                        <div class="col-md-12">

                            <div class="form-group class=" col-md-6 "">
                                <label for="removeUser" class="col-xs-4 control-label ">Remove User</label>
                                <div class="col-xs-8">
                                    <button class="btn btn-danger">Delete This User</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" form="user-form" class="btn btn-primary">Save changes</button>
</div>
